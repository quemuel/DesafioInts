@model IEnumerable<Ints.DesafioInts.Application.ViewModels.ClienteViewModel>

@{
    ViewBag.Title = "Index";
}

<h3>Clientes</h3>
<hr /><br />

<div class="panel panel-default">
    <div class="panel-heading ">
        <i class="glyphicon glyphicon-filter"></i> Filtros
        <a href="@Url.Action("Index", "Clientes")" class="btn btn-default">
            <span class="glyphicon glyphicon-refresh"></span>
            Limpar Filtro
        </a>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <div class="row">
                <div class="col-md-12">
                    @Html.ActionLink("Somente Grande", "Index", "Clientes", new { buscar = "porte-empresa-grande" }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Somente Média", "Index", "Clientes", new { buscar = "porte-empresa-media" }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Somente Pequena", "Index", "Clientes", new { buscar = "porte-empresa-pequena" }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    @using (Html.BeginForm(null, null, FormMethod.Get))
                    {
                        <div class="form-group">
                            <div class="input-group">
                                <input type="text" class="form-control" name="buscar" placeholder="Buscar por Nome...">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="submit">Buscar</button>
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <i class="glyphicon glyphicon-list"></i> Listagem 
        <a href="@Url.Action("Create", "Clientes")" class="btn btn-default">
            <span class="glyphicon glyphicon-plus"></span>
            Novo Cliente
        </a>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PorteEmpresaId)
                </th>
                <th>Opções</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @item.PorteEmpresaViewModel.Descricao
                    </td>
                    <td>
                        @Html.ActionLink("Visualizar", "Details", new { id = item.ClienteId }, new { @class = "btn btn-success btn-xs" })
                        @Html.ActionLink("Atualizar", "Edit", new { id = item.ClienteId }, new { @class = "btn btn-warning btn-xs" })
                        @Html.ActionLink("Excluir", "Delete", new { id = item.ClienteId }, new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>