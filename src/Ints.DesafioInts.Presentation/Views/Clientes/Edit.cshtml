@model Ints.DesafioInts.Application.ViewModels.ClienteViewModel

@{
    ViewBag.Title = "Atualizar Cliente";
}

<h3>Atualizar Cliente</h3>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()  
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ClienteId)
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.Nome, string.Format("{0}:", Html.DisplayNameFor(model => model.Nome)), htmlAttributes: new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.PorteEmpresaId, string.Format("{0}:", Html.DisplayNameFor(model => model.PorteEmpresaId)), htmlAttributes: new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.DropDownList("PorteEmpresaId", null, "Selecione...", htmlAttributes: new { @class = "form-control selectpicker", @data_live_search = "true" })
                            @Html.ValidationMessageFor(model => model.PorteEmpresaId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-12 btn-group">
                    @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-default" })
                    <input type="submit" value="Atualizar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
