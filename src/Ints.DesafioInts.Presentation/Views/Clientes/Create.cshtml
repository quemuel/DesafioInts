@model Ints.DesafioInts.Application.ViewModels.ClienteViewModel

@{
    ViewBag.Title = "Create";
}

<h3>Cadastrar Cliente</h3>
<hr />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.Nome, string.Format("{0}:", Html.DisplayNameFor(model => model.Nome)), htmlAttributes: new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.PorteEmpresaId, string.Format("{0}:", Html.DisplayNameFor(model => model.PorteEmpresaId)), htmlAttributes: new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.DropDownListFor(c => c.PorteEmpresaId, ViewBag.PorteEmpresaId as SelectList, "Selecione...", htmlAttributes: new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.PorteEmpresaId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-12 btn-group">
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Cadastrar Cliente" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
