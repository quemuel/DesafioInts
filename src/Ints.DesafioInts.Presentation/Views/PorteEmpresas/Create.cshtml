@model Ints.DesafioInts.Application.ViewModels.PorteEmpresaViewModel

@{
    ViewBag.Title = "Cadastrar Porte Empresa";
}

<h3>Cadastrar Porte Empresa</h3>
<hr /><br />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.Descricao, HttpUtility.HtmlDecode(string.Format("{0}:", Html.DisplayNameFor(model => model.Descricao))), htmlAttributes: new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-12 btn-group">
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Cadastrar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
