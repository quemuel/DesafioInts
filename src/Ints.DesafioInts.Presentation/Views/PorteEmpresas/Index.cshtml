@model IEnumerable<Ints.DesafioInts.Application.ViewModels.PorteEmpresaViewModel>

@{
    ViewBag.Title = "Listar Porte Empresa";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Cadastrar Porte Empresa", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
